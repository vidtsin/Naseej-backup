<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="wizard_clear_cheque">
            <field name="name">clear.cheque.wizard</field>
            <field name="model">clear.cheque</field>
            <field name="arch" type="xml">
                <form string="Clear Cheque">
                    <group>
                        <field name="date_clear" style="width:40%%"/>
                    </group>
                    <footer>
                        <button name="clear_cheque" string="Post" type="object" class="oe_highlight"/>
                        or <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

