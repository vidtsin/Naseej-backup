<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="wizard_receive_return_cheque">
            <field name="name">receive.return.cheque.wizard</field>
            <field name="model">receive.return.cheque</field>
            <field name="arch" type="xml">
                <form string="Return Cheque">
                        <group>
                            <field name="date_return"/>
                            <field name="comment"/>
                        </group>
                    <footer>
                        <button name="return_cheque" string="Post" type="object" class="oe_highlight"/>
                        or <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
